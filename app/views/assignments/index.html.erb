

<div class="container body_all">
  <div class="row">
    <div class="col-sm-9 col-sm-offset-2">
      <% @assignments.each do |assignment| %>
        <div class="well lesson_content">
          <h3>A<%= assignment.assignment_number %>. <%= assignment.title %> </h3>
          <p>
            <%= assignment.content[0,200] %>...
          </p>
          <% if @current_user.usertype == "teacher" %>
            <div class="">
              <small> Released to students? <%= assignment.released_display %></small>
            </div>
          <% end %>
          <small class= "timestamp">
            created <%= time_ago_in_words(assignment.created_at)%> ago
          </small>
          <%= link_to "View", assignment_path(id: assignment.id) %>
          <%= link_to "Edit", edit_assignment_path(id: assignment.id) %>
        </div>
      <%end %>
    </div>
  </div>
</div>
