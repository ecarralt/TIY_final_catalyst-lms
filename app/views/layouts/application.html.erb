<!DOCTYPE html>
<html>
<head>
  <title>CatalystLMS</title>
  <link rel="stylesheet" type="text/css"
      href="https://fonts.googleapis.com/css?family=Trirong">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


  <div class="menusection">
    <div class="menuitem">
      <h1><%= link_to "Lessons", lessons_path %></h1>
    </div>
    <div class="menuitem">
      <h1><%= link_to "Assignments", lessons_path %></h1>

    </div>
    <div class="menuitem">
      <h1><%= link_to "Student Tracking", lessons_path%></h1>
    </div>

  </div>
  <div class="col-xs-10 col-xs-offset-1">
    <div class="menulinks_top">
      <% if @current_user %>
        <inline>Signed in as <%= @current_user.usertype %> <%= @current_user.username %> </inline>
      <% else %>
        <div class="">
        </div>
      <% end  %>
    </div>
  </div>

<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <% if notice %>
      <div class="alert alert-warning">  <%= notice %>  </p>
    <% end %>
    </div>
  </div>
</div>


  <div class="row">
    <div class="col-sm-1 col-sm-offset-11">
      <div class="logout_button btn">
        <%= link_to "Log Out", sign_out_path, class: "btn btn-warning" %>
      </div>
    </div>
  </div>

<%= yield %>

<div class="test">
  <footer>
    <div class="creditsbar">
        <h6>Enrique Carral Trevino</h6>
        <h6>Copyright 2016</h6>
    </div>
  </footer>
</div>

</body>
</html>
