<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <h1>Lessons</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2">
      <div class="new_lesson_btn btn">
        <%= link_to "New Lesson", new_lesson_path, class: "btn btn-warning" %>
      </div>
    </div>
    <div class="col-sm-8">
      <% @lessons.each do |lesson| %>
        <div class="well lesson_content">
          <h3><%= lesson.title %> </h3>
          <p>
            <%= lesson.content[0,200] %>...
          </p>
          <small> created on <%= time_ago_in_words(lesson.created_at)%> ago</small>
          <%= link_to "View", lesson_path(id: lesson.id) %>
          <%= link_to "Edit", edit_lesson_path(id: lesson.id) %>

        </div>
      <%end %>
    </div>
  </div>
</div>
