<div class="container body_all">
  <div class="row">
    <div class="col-sm-9 col-sm-offset-2">
      <% @arecords.each do |arecord| %>
        <div class="well lesson_content">
          <h3>A<%= arecord.assignment.assignment_number %>. <%= arecord.assignment.title %> </h3>
          <p> Submitted by: <%= arecord.user.full_name %></p>
            <div class="">
            </div>
          <small class= "timestamp">
            submitted <%= time_ago_in_words(arecord.created_at)%> ago
          </small>
          <%= link_to "Grade", arecord_path(id: arecord.id) %>
        </div>
      <%end %>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="grade_margin">
    </div>
  </div>
</div>
