<!DOCTYPE html>
<html>
<head>
  <title>CatalystLMS</title>
  <link rel="stylesheet" type="text/css"
      href="https://fonts.googleapis.com/css?family=Trirong">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="menusection">
  <div class="row">
    <%= link_to lessons_path do  %>
      <div class="col-sm-4 menuitem_teachers">
        <h1><%=icon('graduation-cap')%> Lessons </h1>
      </div>
    <% end %>
    <%= link_to assignments_path do  %>
      <div class="col-sm-4 menuitem_teachers">
        <h1><%=icon('pencil-square-o')%> Assignments </h1>
      </div>
    <% end %>
    <%= link_to arecords_path do  %>
      <div class="col-sm-4 menuitem_teachers">
        <h1><%=icon('check-square-o')%> Grade </h1>
      </div>
    <% end %>
    <%= link_to students_path do  %>
      <div class="col-sm-4 menuitem_teachers">
        <h1><%=icon('users')%> Students </h1>
      </div>
    <% end %>
  </div>
</div>

<div class="container">
  <div class="row menusection_placeholder">
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <div class="signed_in_as_text">
        <% if @current_user %>
          <inline>Welcome, <%= @current_user.first_name %> </inline>
        <% end  %>
      </div>
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <% if notice %>
        <div class="alert alert-info alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <%= notice %>  </p>
      <% end %>
      </div>
    </div>
  </div>
</div>


  <div class="logout_button btn">
    <%= link_to "Log Out", sign_out_path, class: "btn btn-warning" %>
  </div>


  <%= yield %>

  <div class="margin">

  </div>
  <div class="bottom_section">

  <div class="row test">
    <div class="col-sm-12">
          <div class="creditsbar">
              <h6>Catalyst</h6>
              <h6>Enrique Carral Trevino</h6>
              <h6>Copyright 2016</h6>
          </div>
      </div>
    </div>
  </div>


</body>
</html>
