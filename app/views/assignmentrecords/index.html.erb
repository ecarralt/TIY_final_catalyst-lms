<div class="menu_underline_rail">
  <div class= "menu_underline_white_rail"></div>
  <% if @current_user.usertype == "teacher" %>
    <div class= "menu_underline_teacher_arecords"></div>
  <% elsif @current_user.usertype == "student"%>
    <div class= "menu_underline_student_db"></div>
  <% end %>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <h1>Grade</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <% @arecords.each do |arecord| %>
        <div class="well arecord_content">
          <h3>A<%= arecord.assignment.assignment_number %>. <%= arecord.assignment.title %> </h3>
          <p> Submitted by: <%= arecord.user.full_name %></p>
            <div class="">
            </div>
          <small class= "timestamp">
            submitted <%= time_ago_in_words(arecord.created_at)%> ago
          </small>
          <%= link_to "Grade", arecord_path(id: arecord.id) %>
        </div>
      <%end %>
    </div>
    <div class="col-sm-2">
      <div class="by_student_btn">
        <%= link_to "Student View", students_path, class: "btn btn-success" %>
      </div>
      <div class="pr_btn">
        <%= link_to "Create Progress Report", new_pr_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="grade_margin">
  </div>
</div>
