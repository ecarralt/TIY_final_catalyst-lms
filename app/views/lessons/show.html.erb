<div class="lesson_title">
  <h1><%=@lesson.lesson_number %>. <%=@lesson.title %></h1>
  <small>last update on: <%= @lesson.updated_at.to_formatted_s(:short) %> UTC </small>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-2">
      <% if @current_user.usertype == "teacher" %>
        <div class="delete_lesson_btn btn">
          <%= link_to "Delete Lesson", delete_lesson_path, method: :delete, class: "btn btn-danger" %>
        </div>
        <div class="update_lesson_btn btn">
          <%= link_to "Update Lesson", edit_lesson_path(id: @lesson.id), method: :get, class: "btn btn-warning" %>
        </div>
      <% end %>
    </div>
    <div class="col-sm-8">
      <p>
        <% if false %>
        <%= simple_format("#{@lesson.content}") %>
        <% end %>
        <%= markdown(@lesson.content) %>
      </p>
    </div>
  </div>
  <div class="row">
    <% if @current_user.usertype == "student" %>
      <div class="col-sm-4 col-sm-offset-8">
        <% if @lesson.lesson_number < @last_lesson_number %>
        <div class="btn">
          <%= link_to "Mark as complete and Next", lesson_path(id: Lesson.find_by(lesson_number:(@current_l_number + 1)).id), class: "btn btn-warning" %>
        </div>
        <% else %>
        <div class="btn">
          <%= link_to "Mark as complete and Next", lessons_path, class: "btn btn-warning" %>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
